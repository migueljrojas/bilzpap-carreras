extends _layouts/base

include ./_modules/slider/slider

block content
    main.home
        section.home__hero
            .home__hero__backdrop-mobile
                img(src="/images/back-hero-mobile.jpg")
            .home__hero__backdrop-tablet
                img(src="/images/back-hero-tablet.jpg")
            .home__hero__backdrop-desktop
                img(src="/images/back-hero-desktop.jpg")
            .container.home__hero__characters__container
                .home__hero__characters.wow.fadeInUpBig
                    img(src="/images/characters.png")
            .home__hero__container
                .container
                    .row
                        .col-xs-24
                            .home__hero__wrapper.wow.fadeInUp
                                h2.home__hero__title.text-shadow Participa por ser el próximo piloto de ekarts
                                h3.home__hero__subtitle
                                    |Bilz y Pap y Eliseo Salazar te invitan a disfruta junto a tu familia de una tarde de carrera en 
                                    span #ModoBilzyPap.

                            +slider('home__hero__slider', 'multi')
                                .home__hero__slide
                                    .home__hero__group.home__hero__group--left.wow.bounceInLeft
                                        h3.home__hero__slide-title.text-shadow
                                            span 01
                                            br
                                            |¿Cómo participar?
                                        p.home__hero__slide-text 
                                            |Crea tu propio auto a escala usando botellas Bilz y Pap reutilizables y súbelo a Facebook o 
                                            span.yellow Instagram 
                                            |con “Carrera en #ModoBilzyPap “.¡No olvides etiquetarnos!
                                        p.home__hero__slide-text Inspírate con nuestras creaciones de más abajo.
                                .home__hero__slide
                                    .home__hero__group.home__hero__group--right.wow.bounceInRight
                                        h3.home__hero__slide-title.text-shadow
                                            span 02
                                            br
                                            |La Carrera
                                        p.home__hero__slide-text Habrá una gran pista de carrera para que te sientas como un verdadero piloto de E-karts eléctricos. Entretención para padres e hijos, 100% amigable con el medio ambiente.
                                        p.home__hero__slide-text.home__hero__slide-text--red Se el próximo Eliseo Salazar

        section.home__creacion
            .home__creacion__backdrop.wow.bounceInUp
                img(src="/images/back-middle.png")
            .container
                .row
                    .col-xs-24
                        +slider('home__creacion__slider')
                            .home__creacion__slide
                                .home__creacion__slide-group
                                    .home__creacion__slide-image.wow.bounceInLeft
                                        img(src="/images/middle-cover.png")
                                    .home__creacion__slide-content
                                        .home__creacion__slide-container.wow.bounceInRight
                                            h3.home__creacion__slide-title creación 1
                                            img(src="/images/underline.png")
                                        p.home__creacion__slide-text Participa por ser el próximo @Eliseo Salazar junto a tus hijos en el E-Karts que trae Bilz y pap inspirándote en esta creación.
                                        p.home__creacion__slide-text Más info en bilzypap.cl/ y en nuestras redes sociales. Carrera en #ModoBilzyPap
                            .home__creacion__slide
                                .home__creacion__slide-group
                                    .home__creacion__slide-image.wow.bounceInLeft
                                        img(src="/images/middle-cover.png")
                                    .home__creacion__slide-content
                                        .home__creacion__slide-container.wow.bounceInRight
                                            h3.home__creacion__slide-title creación 2
                                            img(src="/images/underline.png")
                                        p.home__creacion__slide-text Participa por ser el próximo @Eliseo Salazar junto a tus hijos en el E-Karts que trae Bilz y pap inspirándote en esta creación.
                                        p.home__creacion__slide-text Más info en bilzypap.cl/ y en nuestras redes sociales. Carrera en #ModoBilzyPap
                            .home__creacion__slide
                                .home__creacion__slide-group
                                    .home__creacion__slide-image.wow.bounceInLeft
                                        img(src="/images/middle-cover.png")
                                    .home__creacion__slide-content
                                        .home__creacion__slide-container.wow.bounceInRight
                                            h3.home__creacion__slide-title creación 3
                                            img(src="/images/underline.png")
                                        p.home__creacion__slide-text Participa por ser el próximo @Eliseo Salazar junto a tus hijos en el E-Karts que trae Bilz y pap inspirándote en esta creación.
                                        p.home__creacion__slide-text Más info en bilzypap.cl/ y en nuestras redes sociales. Carrera en #ModoBilzyPap

        section.home__concurso
            .home__concurso__decoration-top.wow.bounceInRight
                img(src="/images/sparkles.png")
            .home__concurso__characters.wow.bounceInUp
                img(Src="/images/characters-bottom.png")
            .home__concurso__decoration-bottom.wow.bounceInLeft
                img(src="/images/sparkles.png")
            .container.container--modifier
                .row
                    .col-xs-24.col-md-12.col-md-offset-6
                        h2.home__concurso__title.wow.fadeInUp concurso
                        p.home__concurso__text.wow.fadeInUp
